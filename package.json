{
  "name": "@open-microfrontends/generator",
  "description": "OpenMicrofrontends Generator (OMG)",
  "version": "1.0.0",
  "homepage": "https://www.open-microfrontends.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-microfrontends/open-microfrontends-generator.git"
  },
  "files": [
    "dist",
    "schemas",
    "templates"
  ],
  "main": "dist",
  "bin": {
    "omg": "dist/index.js"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "colors": "^1.4.0",
    "ejs": "^3.1.10",
    "yaml": "^2.8.0",
    "json-schema-to-typescript": "^15.0.4",
    "ajv": "^8.17.1"
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "typescript": "^5.8.3",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "eslint": "^9.32.0",
    "@eslint/js": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "@mashroom/mashroom-portal": "^2.9.1"
  },
  "jest": {
    "testRegex": "(\\.(test|spec))\\.ts$",
    "transform": {
      ".(ts|tsx)$": "ts-jest"
    }
  },
  "scripts": {
    "generate": "json2ts schemas/open-microfrontends.json src/generated/open-microfrontends.d.ts --no-unknownAny",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "build": "npm run type-check && npm run lint && npm run test && tsc",
    "prepare": "husky"
  }
}
