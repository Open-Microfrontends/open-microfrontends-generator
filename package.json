{
  "name": "@open-microfrontends/generator",
  "description": "OpenMicrofrontends Generator (OMG)",
  "version": "1.0.0",
  "homepage": "https://www.open-microfrontends.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-microfrontends/open-microfrontends-generator.git"
  },
  "files": [
    "dist",
    "templates"
  ],
  "type": "module",
  "bin": {
    "omg": "dist/index.js"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "colors": "^1.4.0",
    "ejs": "^3.1.10",
    "yaml": "^2.8.1",
    "json-schema-to-typescript": "^15.0.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "peerDependencies": {
    "@open-microfrontends/types": "^1"
  },
  "devDependencies": {
    "@open-microfrontends/types": "file:../open-microfrontends/packages/types",
    "@open-microfrontends/schemas": "file:../open-microfrontends/packages/schemas",
    "@mashroom/mashroom": "^2.9.2",
    "@mashroom/mashroom-portal": "^2.9.2",
    "cpy-cli": "^6.0.0",
    "typescript": "^5.9.2",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "@types/ejs": "^3.1.5",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "eslint": "^9.35.0",
    "@eslint/js": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "husky": "^9.1.7"
  },
  "jest": {
    "testRegex": "(\\.(test|spec))\\.ts$",
    "transform": {
      "^.+\\.ts$":["ts-jest", {
        "useESM": true
      }]
    },
    "extensionsToTreatAsEsm": [".ts"]
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "validate:types": "tsc --noEmit",
    "validate:format": "prettier --check src test",
    "validate:lint": "eslint",
    "validate": "npm run validate:types && npm run validate:format && npm run validate:lint",
    "fix:format": "prettier --write src test",
    "fix:lint": "eslint --fix",
    "fix": "npm run fix:format && npm run fix:lint",
    "build": "tsc",
    "prepare": "husky"
  }
}
